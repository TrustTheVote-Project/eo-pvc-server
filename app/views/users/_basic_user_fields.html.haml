= f.label :first_name
= f.text_field :first_name

= f.label :last_name
= f.text_field :last_name

%br
%fieldset
  %legend= t('date_of_birth')
  .dob
    .dob-item
      = f.select :dob_day, (1..31).to_a.prepend([t('activerecord.attributes.user.dob_day'),'']), {disabled: "", selected: f.object.dob_day || ""}

    .dob-item
      = f.select :dob_month, Date::ABBR_MONTHNAMES.compact.each_with_index.collect{|m, i| [m, i+1]}.prepend([t('activerecord.attributes.user.dob_month'),'']), {disabled: "", selected: f.object.dob_month|| ""}


    .dob-item
      = f.select :dob_year, (1900..2003).to_a.reverse.prepend([t('activerecord.attributes.user.dob_year'),'']), {disabled: "", selected: f.object.dob_year || ""}
%br


= f.label :postal_code
= f.text_field :postal_code