= service_header('ballot_online', 'date')

.instructions
  %p.text-large.center= t('services.ballot_online.ballot_title_2').html_safe

.contest-selection
  .name= t('services.ballot_online.fake_contest.name')
  .item
    .item-value
      - if @write_in
        .first-name= @write_in
      - else
        .first-name= t("services.ballot_online.fake_contest.items.#{@selection}.first_name")
        .last-name= t("services.ballot_online.fake_contest.items.#{@selection}.last_name")
        .party= t("services.ballot_online.fake_contest.items.#{@selection}.party")

%br
= t('services.ballot_online.delivery.prompt').html_safe

= label_tag :same_day_delivery_in_app, class: 'radio' do
  = radio_button_tag :same_day_delivery, :in_app
  .radio-icon
  .label= t('services.ballot_online.delivery.in_app')

= label_tag :same_day_delivery_email, class: 'radio' do
  = radio_button_tag :same_day_delivery, :email
  .radio-icon
  .label= t('services.ballot_online.delivery.email')

= label_tag :same_day_delivery_record_locator, class: 'radio' do
  = radio_button_tag :same_day_delivery, :record_locator
  .radio-icon
  .label= t('services.ballot_online.delivery.record_locator')
  
.buttons
  = link_to t('buttons.back'), :back, class: [:back, :button]
  = link_to t('buttons.next'), "#", class: [:next, :button]