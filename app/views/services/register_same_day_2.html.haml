= service_header('registration', 'same_day')

%h3= t('registration_wizard.same_day.delivery.header')

.instructions
  = t('registration_wizard.same_day.delivery.intro').html_safe
  
.checkbox-list
  = label_tag :same_day_delivery_email, class: 'checkbox' do
    = check_box_tag :same_day_delivery_email
    .checkbox-icon
    = t('registration_wizard.same_day.delivery.email')

  = label_tag :same_day_delivery_print, class: 'checkbox' do
    = check_box_tag :same_day_delivery_print
    .checkbox-icon
    = t('registration_wizard.same_day.delivery.print')

  = label_tag :same_day_delivery_later, class: 'checkbox' do
    = check_box_tag :same_day_delivery_later
    .checkbox-icon
    = t('registration_wizard.same_day.delivery.later')
    

.buttons 
  = link_to t('buttons.back'), register_same_day_services_path, class: [:button, :back]
  = link_to t('buttons.next'), register_same_day_complete_services_path, class: [:button, :next]